<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
          "-//Puppy Crawl//DTD Check Configuration 1.3//EN"
          "http://www.puppycrawl.com/dtds/configuration_1_3.dtd">


<module name = "Checker">
    <property name="charset" value="UTF-8"/>

    <!-- do not change severity to 'error', as that will hide errors caused by exceptions -->
    <property name="severity" value="warning"/>

    <!-- haltOnException is required for exception fixes and reporting of all exceptions -->
    <property name="haltOnException" value="false"/>

    <!-- BeforeExecutionFileFilters is required for sources of java9 -->
    <module name="BeforeExecutionExclusionFileFilter">
        <property name="fileNamePattern" value="module\-info\.java$" />
    </module>

    <module name="TreeWalker">
         <!-- Example of sevntu.checkstyle Check usage -->
         <!-- <module name="NestedSwitchCheck"/> -->

         <!-- Example of checkstyle Check usage -->
        <module name="IllegalTypeCheck">
            <property name="illegalClassNames" value="String, String[], String[][]"/>
        </module>
        <module name="IllegalTypeCheck">
            <property name="illegalClassNames" value="String, String[], String[][]"/>
        </module>
        <module name="UncommentedMain"/>
        <!--module name="ImportControl">
            <property name="file" value="import-control.xml"/>
            <property name="path" value="^.*[\\/]src[\\/]main[\\/].*$"/>
        </module-->
        <module name="RedundantImport"/>
        <module name="IllegalCatch"/>
        <module name="PackageDeclaration"/>
        <module name="PackageName">
            <property name="format"
                  value="^[a-z]+(\.[a-z][a-z0-9]*)*$"/>
        </module>
        <module name="IllegalInstantiation">
            <property name="classes" value="java.lang.Boolean"/>
        </module>
        <module name="IllegalThrows"/>
        <module name="AvoidStarImport"/>
        <module name="IllegalImport"/>
        <module name="AvoidStaticImport"/>
        <module name="VisibilityModifier"/>
        <module name="ImportOrder">
            <property name="groups" value="/^java\./,javax,org"/>
            <property name="ordered" value="true"/>
            <property name="separated" value="true"/>
            <property name="option" value="above"/>
            <property name="sortStaticImportsAlphabetically" value="true"/>
        </module>
        <module name="UnusedImports"/>
        <module name="CustomImportOrder">
            <property name="customImportOrderRules"
                value="STATIC###STANDARD_JAVA_PACKAGE###SPECIAL_IMPORTS"/>
            <property name="specialImportsRegExp" value="^org\."/>
            <property name="sortImportsInGroupAlphabetically" value="true"/>
            <property name="separateLineBetweenGroups" value="true"/>
        </module>
        <module name="JavadocMethod"/>
        <!-- AnnotationUtility.getAnnotation -->
        <module name="SuppressWarnings"/>
        <!-- AbstractClassCouplingCheck -->
        <module name="ClassFanOutComplexity">
            <property name="max" value="10"/>
        </module>
        <module name="ClassDataAbstractionCoupling">
            <property name="max" value="5"/>
        </module>
    </module>
<!--
    <module name="SeverityMatchFilter">
        <property name="severity" value="warning"/>
        <property name="acceptOnMatch" value="false"/>
    </module>
-->
</module>
